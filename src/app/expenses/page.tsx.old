'use client'

import { useEffect, useState } from 'react'
import { useAuth } from '@/contexts/AuthContext'
import {
  Expense,
  ExpenseWithDetails,
  TeamPaymentRecord,
  ExpenseType,
  PaymentStatus,
  PaymentType,
} from '@/types/database'
import { formatCurrency } from '@/lib/utils'
import {
  Plus,
  Trash2,
  DollarSign,
  Calendar,
  TrendingDown,
  Users,
  CreditCard,
  Eye,
  X,
  CheckCircle,
  Clock,
} from 'lucide-react'
import { format } from 'date-fns'
import toast from 'react-hot-toast'

interface MonthlyExpense {
  month: string
  total: number
  count: number
}

export default function ExpensesPage() {
  const { user, profile, organization, supabase } = useAuth()
  const [expenses, setExpenses] = useState<ExpenseWithDetails[]>([])
  const [teamMembers, setTeamMembers] = useState<any[]>([])
  const [isLoading, setIsLoading] = useState(true)
  const [showAddExpense, setShowAddExpense] = useState(false)
  const [showPaymentModal, setShowPaymentModal] = useState(false)
  const [selectedExpense, setSelectedExpense] = useState<ExpenseWithDetails | null>(null)
  const [newExpense, setNewExpense] = useState({
    description: '',
    amount: '',
    expense_type: 'other' as ExpenseType,
    team_member_id: '',
    project_name: '',
    total_amount: '',
  })
  const [newPayment, setNewPayment] = useState({
    amount: '',
    payment_type: 'regular' as PaymentType,
    payment_date: format(new Date(), 'yyyy-MM-dd'),
    notes: '',
  })
  const [monthlyExpenses, setMonthlyExpenses] = useState<MonthlyExpense[]>([])
  const [selectedMonth, setSelectedMonth] = useState<string>('all')
  const [filterType, setFilterType] = useState<'all' | ExpenseType>('all')

  useEffect(() => {
    if (!user) return
    fetchExpenses()
    fetchTeamMembers()
  }, [user])

  const fetchTeamMembers = async () => {
    if (!organization) return

    const { data, error } = await supabase
      .from('organization_members')
      .select(
        `
        *,
        profile:profiles(*)
      `
      )
      .eq('organization_id', organization.organizationId)
      .eq('status', 'active')

    if (!error && data) {
      setTeamMembers(data)
    }
  }

  const fetchExpenses = async () => {
    setIsLoading(true)

    // Fetch expenses with team member details
    const { data: expensesData, error: expensesError } = await supabase
      .from('expenses')
      .select(
        `
        *,
        team_member:profiles!expenses_team_member_id_fkey(*)
      `
      )
      .eq('user_id', user!.id)
      .order('created_at', { ascending: false })

    if (expensesError) {
      console.error('Error fetching expenses:', expensesError)
      setIsLoading(false)
      return
    }

    // Fetch payment records for team expenses
    if (expensesData) {
      const teamExpenseIds = expensesData
        .filter((e: any) => e.expense_type === 'team')
        .map((e: any) => e.id)

      let paymentRecords: TeamPaymentRecord[] = []
      if (teamExpenseIds.length > 0) {
        const { data: recordsData } = await supabase
          .from('team_payment_records')
          .select('*')
          .in('expense_id', teamExpenseIds)
          .order('payment_date', { ascending: false })

        if (recordsData) {
          paymentRecords = recordsData
        }
      }

      // Combine data
      const expensesWithDetails: ExpenseWithDetails[] = expensesData.map((expense: any) => ({
        ...expense,
        payment_records: paymentRecords.filter((r) => r.expense_id === expense.id),
        pending_amount:
          expense.expense_type === 'team'
            ? (expense.total_amount || 0) - (expense.paid_amount || 0)
            : 0,
        payment_count: paymentRecords.filter((r) => r.expense_id === expense.id).length,
      }))

      setExpenses(expensesWithDetails)
      calculateMonthlyExpenses(expensesWithDetails)
    }

    setIsLoading(false)
  }

  const calculateMonthlyExpenses = (expensesData: Expense[]) => {
    const monthsMap = new Map<string, { total: number; count: number }>()

    expensesData.forEach((expense) => {
      const monthKey = format(new Date(expense.created_at), 'MMM yyyy')
      const existing = monthsMap.get(monthKey) || { total: 0, count: 0 }
      const expenseAmount =
        expense.expense_type === 'team' ? expense.total_amount || expense.amount : expense.amount
      monthsMap.set(monthKey, {
        total: existing.total + Number(expenseAmount),
        count: existing.count + 1,
      })
    })

    const monthlyData: MonthlyExpense[] = Array.from(monthsMap.entries())
      .map(([month, data]) => ({
        month,
        total: data.total,
        count: data.count,
      }))
      .sort((a, b) => {
        const dateA = new Date(a.month)
        const dateB = new Date(b.month)
        return dateB.getTime() - dateA.getTime()
      })

    setMonthlyExpenses(monthlyData)
  }

  const handleAddExpense = async (e: React.FormEvent) => {
    e.preventDefault()

    // Validate based on expense type
    if (newExpense.expense_type === 'team') {
      if (!newExpense.team_member_id) {
        toast.error('Please select a team member')
        return
      }
      if (!newExpense.total_amount) {
        toast.error('Please enter total amount for team expense')
        return
      }
    }

    const expenseData: any = {
      user_id: user!.id,
      organization_id: organization?.organizationId || null,
      description: newExpense.description,
      amount: parseFloat(newExpense.amount),
      expense_type: newExpense.expense_type,
    }

    if (newExpense.expense_type === 'team') {
      expenseData.team_member_id = newExpense.team_member_id
      expenseData.project_name = newExpense.project_name || newExpense.description
      expenseData.total_amount = parseFloat(newExpense.total_amount)
      expenseData.paid_amount = 0
      expenseData.payment_status = 'pending'
    }

    const { data, error } = await supabase.from('expenses').insert([expenseData]).select(`
        *,
        team_member:profiles!expenses_team_member_id_fkey(*)
      `)

    if (!error && data) {
      const newExpenseWithDetails: ExpenseWithDetails = {
        ...data[0],
        payment_records: [],
        pending_amount: data[0].expense_type === 'team' ? data[0].total_amount || 0 : 0,
        payment_count: 0,
      }
      setExpenses([newExpenseWithDetails, ...expenses])
      calculateMonthlyExpenses([newExpenseWithDetails, ...expenses])
      setNewExpense({
        description: '',
        amount: '',
        expense_type: 'other',
        team_member_id: '',
        project_name: '',
        total_amount: '',
      })
      setShowAddExpense(false)
      toast.success('Expense added successfully!')
    } else {
      toast.error('Failed to add expense')
      console.error('Error:', error)
    }
  }

  const handleAddPayment = async (e: React.FormEvent) => {
    e.preventDefault()

    if (!selectedExpense) return

    const paymentAmount = parseFloat(newPayment.amount)
    const remainingAmount = (selectedExpense.total_amount || 0) - (selectedExpense.paid_amount || 0)

    if (paymentAmount > remainingAmount) {
      toast.error(
        `Payment amount cannot exceed remaining balance of ${formatCurrency(
          remainingAmount,
          profile?.currency || 'INR'
        )}`
      )
      return
    }

    const { data, error } = await supabase
      .from('team_payment_records')
      .insert([
        {
          expense_id: selectedExpense.id,
          amount: paymentAmount,
          payment_type: newPayment.payment_type,
          payment_date: newPayment.payment_date,
          notes: newPayment.notes,
          created_by: user!.id,
        },
      ])
      .select()

    if (!error && data) {
      toast.success('Payment recorded successfully!')
      setShowPaymentModal(false)
      setNewPayment({
        amount: '',
        payment_type: 'regular',
        payment_date: format(new Date(), 'yyyy-MM-dd'),
        notes: '',
      })
      // Refresh expenses to get updated amounts
      fetchExpenses()
    } else {
      toast.error('Failed to record payment')
      console.error('Error:', error)
    }
  }

  const handleDeleteExpense = async (id: string) => {
    if (
      !confirm(
        'Are you sure you want to delete this expense? This will also delete all associated payment records.'
      )
    )
      return

    const { error } = await supabase.from('expenses').delete().eq('id', id)

    if (!error) {
      const updatedExpenses = expenses.filter((e) => e.id !== id)
      setExpenses(updatedExpenses)
      calculateMonthlyExpenses(updatedExpenses)
      toast.success('Expense deleted successfully')
    } else {
      toast.error('Failed to delete expense')
    }
  }

  const handleViewPayments = (expense: ExpenseWithDetails) => {
    setSelectedExpense(expense)
    setShowPaymentModal(true)
  }

  const filteredExpenses = expenses.filter((expense) => {
    const monthMatch =
      selectedMonth === 'all' || format(new Date(expense.created_at), 'MMM yyyy') === selectedMonth
    const typeMatch = filterType === 'all' || expense.expense_type === filterType
    return monthMatch && typeMatch
  })

  const totalExpenses = expenses.reduce((sum, expense) => {
    const amount =
      expense.expense_type === 'team' ? expense.total_amount || expense.amount : expense.amount
    return sum + Number(amount)
  }, 0)

  const teamExpensesTotal = expenses
    .filter((e) => e.expense_type === 'team')
    .reduce((sum, expense) => sum + Number(expense.total_amount || expense.amount), 0)

  const otherExpensesTotal = expenses
    .filter((e) => e.expense_type === 'other')
    .reduce((sum, expense) => sum + Number(expense.amount), 0)

  const totalPending = expenses
    .filter((e) => e.expense_type === 'team')
    .reduce((sum, expense) => {
      return sum + ((expense.total_amount || 0) - (expense.paid_amount || 0))
    }, 0)

  if (isLoading) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="text-lg text-gray-600">Loading expenses...</div>
      </div>
    )
  }

  return (
    <div className="min-h-screen bg-gray-50">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {/* Header */}
        <div className="mb-8">
          <h1 className="text-3xl font-bold text-gray-900">Expenses</h1>
          <p className="text-gray-600 mt-2">
            Track your business expenses and team member payments
          </p>
        </div>

        {/* Stats Cards */}
        <div className="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div className="card p-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-gray-600">Total Expenses</p>
                <p className="text-3xl font-bold text-gray-900 mt-1">
                  {formatCurrency(totalExpenses, profile?.currency || 'INR')}
                </p>
              </div>
              <div className="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                <TrendingDown className="w-6 h-6 text-red-600" />
              </div>
            </div>
          </div>

          <div className="card p-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-gray-600">Team Payments</p>
                <p className="text-3xl font-bold text-gray-900 mt-1">
                  {formatCurrency(teamExpensesTotal, profile?.currency || 'INR')}
                </p>
              </div>
              <div className="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <Users className="w-6 h-6 text-blue-600" />
              </div>
            </div>
          </div>

          <div className="card p-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-gray-600">Other Expenses</p>
                <p className="text-3xl font-bold text-gray-900 mt-1">
                  {formatCurrency(otherExpensesTotal, profile?.currency || 'INR')}
                </p>
              </div>
              <div className="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                <DollarSign className="w-6 h-6 text-orange-600" />
              </div>
            </div>
          </div>

          <div className="card p-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-gray-600">Pending Payments</p>
                <p className="text-3xl font-bold text-gray-900 mt-1">
                  {formatCurrency(totalPending, profile?.currency || 'INR')}
                </p>
              </div>
              <div className="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                <Calendar className="w-6 h-6 text-yellow-600" />
              </div>
            </div>
          </div>
        </div>

        {/* Monthly Breakdown */}
        {monthlyExpenses.length > 0 && (
          <div className="card p-6 mb-8">
            <h2 className="text-xl font-bold text-gray-900 mb-4">Monthly Breakdown</h2>
            <div className="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
              {monthlyExpenses.map((monthData) => (
                <div
                  key={monthData.month}
                  className="p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
                >
                  <p className="text-sm font-medium text-gray-600">{monthData.month}</p>
                  <p className="text-lg font-bold text-gray-900 mt-1">
                    {formatCurrency(monthData.total, profile?.currency || 'INR')}
                  </p>
                  <p className="text-xs text-gray-500 mt-1">{monthData.count} expenses</p>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* Action Bar */}
        <div className="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
          <div className="flex flex-wrap items-center gap-4">
            <div>
              <label className="text-sm font-medium text-gray-700 mr-2">Month:</label>
              <select
                value={selectedMonth}
                onChange={(e) => setSelectedMonth(e.target.value)}
                className="input py-2"
              >
                <option value="all">All Time</option>
                {monthlyExpenses.map((monthData) => (
                  <option key={monthData.month} value={monthData.month}>
                    {monthData.month}
                  </option>
                ))}
              </select>
            </div>
            <div>
              <label className="text-sm font-medium text-gray-700 mr-2">Type:</label>
              <select
                value={filterType}
                onChange={(e) => setFilterType(e.target.value as any)}
                className="input py-2"
              >
                <option value="all">All Types</option>
                <option value="team">Team Payments</option>
                <option value="other">Other Expenses</option>
              </select>
            </div>
          </div>
          <button onClick={() => setShowAddExpense(true)} className="btn-primary">
            <Plus className="w-5 h-5 mr-2" />
            Add Expense
          </button>
        </div>

        {/* Add Expense Form */}
        {showAddExpense && (
          <div className="card p-6 mb-6">
            <div className="flex justify-between items-center mb-4">
              <h2 className="text-xl font-bold text-gray-900">Add New Expense</h2>
              <button
                onClick={() => setShowAddExpense(false)}
                className="text-gray-400 hover:text-gray-600"
              >
                <X className="w-5 h-5" />
              </button>
            </div>
            <form onSubmit={handleAddExpense} className="space-y-4">
              {/* Expense Type Selection */}
              <div>
                <label className="label">Expense Type *</label>
                <div className="grid grid-cols-2 gap-4">
                  <button
                    type="button"
                    onClick={() => setNewExpense({ ...newExpense, expense_type: 'team' })}
                    className={`p-4 border-2 rounded-lg flex items-center justify-center gap-3 transition-all ${
                      newExpense.expense_type === 'team'
                        ? 'border-blue-500 bg-blue-50'
                        : 'border-gray-300 hover:border-gray-400'
                    }`}
                  >
                    <Users className="w-5 h-5" />
                    <span className="font-medium">Team Member Payment</span>
                  </button>
                  <button
                    type="button"
                    onClick={() => setNewExpense({ ...newExpense, expense_type: 'other' })}
                    className={`p-4 border-2 rounded-lg flex items-center justify-center gap-3 transition-all ${
                      newExpense.expense_type === 'other'
                        ? 'border-orange-500 bg-orange-50'
                        : 'border-gray-300 hover:border-gray-400'
                    }`}
                  >
                    <DollarSign className="w-5 h-5" />
                    <span className="font-medium">Other Business Expense</span>
                  </button>
                </div>
              </div>

              {newExpense.expense_type === 'team' ? (
                /* Team Expense Fields */
                <>
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <label className="label">Team Member *</label>
                      <select
                        required
                        value={newExpense.team_member_id}
                        onChange={(e) =>
                          setNewExpense({ ...newExpense, team_member_id: e.target.value })
                        }
                        className="input"
                      >
                        <option value="">Select team member</option>
                        {teamMembers.map((member) => (
                          <option key={member.id} value={member.user_id}>
                            {member.profile?.full_name || member.profile?.email || 'Unknown'} -{' '}
                            {member.role}
                          </option>
                        ))}
                      </select>
                    </div>
                    <div>
                      <label className="label">Project Name *</label>
                      <input
                        type="text"
                        required
                        value={newExpense.project_name}
                        onChange={(e) =>
                          setNewExpense({ ...newExpense, project_name: e.target.value })
                        }
                        className="input"
                        placeholder="e.g., Website Design, App Development"
                      />
                    </div>
                  </div>
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <label className="label">Total Project Amount *</label>
                      <input
                        type="number"
                        required
                        step="0.01"
                        min="0"
                        value={newExpense.total_amount}
                        onChange={(e) =>
                          setNewExpense({
                            ...newExpense,
                            total_amount: e.target.value,
                            amount: e.target.value,
                          })
                        }
                        className="input"
                        placeholder="0.00"
                      />
                      <p className="text-xs text-gray-500 mt-1">
                        Total amount to be paid to team member
                      </p>
                    </div>
                    <div>
                      <label className="label">Notes/Description</label>
                      <input
                        type="text"
                        value={newExpense.description}
                        onChange={(e) =>
                          setNewExpense({ ...newExpense, description: e.target.value })
                        }
                        className="input"
                        placeholder="Additional notes (optional)"
                      />
                    </div>
                  </div>
                </>
              ) : (
                /* Other Expense Fields */
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label className="label">Description *</label>
                    <input
                      type="text"
                      required
                      value={newExpense.description}
                      onChange={(e) =>
                        setNewExpense({ ...newExpense, description: e.target.value })
                      }
                      className="input"
                      placeholder="e.g., Office supplies, Software subscription"
                    />
                  </div>
                  <div>
                    <label className="label">Amount *</label>
                    <input
                      type="number"
                      required
                      step="0.01"
                      min="0"
                      value={newExpense.amount}
                      onChange={(e) => setNewExpense({ ...newExpense, amount: e.target.value })}
                      className="input"
                      placeholder="0.00"
                    />
                  </div>
                </div>
              )}

              <div className="flex justify-end gap-3 pt-4 border-t">
                <button
                  type="button"
                  onClick={() => setShowAddExpense(false)}
                  className="btn-secondary"
                >
                  Cancel
                </button>
                <button type="submit" className="btn-primary">
                  Add Expense
                </button>
              </div>
            </form>
          </div>
        )}

        {/* Payment Modal */}
        {showPaymentModal && selectedExpense && (
          <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
            <div className="bg-white rounded-lg max-w-4xl w-full max-h-[90vh] overflow-y-auto">
              <div className="sticky top-0 bg-white border-b p-6 flex justify-between items-center">
                <div>
                  <h2 className="text-2xl font-bold text-gray-900">Payment Details</h2>
                  <p className="text-gray-600 mt-1">
                    {selectedExpense.project_name || selectedExpense.description}
                  </p>
                </div>
                <button
                  onClick={() => {
                    setShowPaymentModal(false)
                    setSelectedExpense(null)
                  }}
                  className="text-gray-400 hover:text-gray-600"
                >
                  <X className="w-6 h-6" />
                </button>
              </div>

              <div className="p-6">
                {/* Payment Summary */}
                <div className="grid grid-cols-3 gap-4 mb-6">
                  <div className="bg-blue-50 p-4 rounded-lg">
                    <p className="text-sm text-gray-600">Total Amount</p>
                    <p className="text-2xl font-bold text-blue-600">
                      {formatCurrency(
                        selectedExpense.total_amount || 0,
                        profile?.currency || 'INR'
                      )}
                    </p>
                  </div>
                  <div className="bg-green-50 p-4 rounded-lg">
                    <p className="text-sm text-gray-600">Paid Amount</p>
                    <p className="text-2xl font-bold text-green-600">
                      {formatCurrency(selectedExpense.paid_amount || 0, profile?.currency || 'INR')}
                    </p>
                  </div>
                  <div className="bg-orange-50 p-4 rounded-lg">
                    <p className="text-sm text-gray-600">Pending Amount</p>
                    <p className="text-2xl font-bold text-orange-600">
                      {formatCurrency(
                        selectedExpense.pending_amount || 0,
                        profile?.currency || 'INR'
                      )}
                    </p>
                  </div>
                </div>

                {/* Team Member Info */}
                {selectedExpense.team_member && (
                  <div className="bg-gray-50 p-4 rounded-lg mb-6">
                    <p className="text-sm text-gray-600">Team Member</p>
                    <p className="text-lg font-semibold text-gray-900">
                      {selectedExpense.team_member.full_name || selectedExpense.team_member.email}
                    </p>
                  </div>
                )}

                {/* Add Payment Form */}
                {selectedExpense.payment_status !== 'completed' && (
                  <div className="bg-white border-2 border-dashed border-gray-300 rounded-lg p-6 mb-6">
                    <h3 className="text-lg font-bold text-gray-900 mb-4">Record New Payment</h3>
                    <form onSubmit={handleAddPayment} className="space-y-4">
                      <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                          <label className="label">Payment Amount *</label>
                          <input
                            type="number"
                            required
                            step="0.01"
                            min="0.01"
                            max={selectedExpense.pending_amount || 0}
                            value={newPayment.amount}
                            onChange={(e) =>
                              setNewPayment({ ...newPayment, amount: e.target.value })
                            }
                            className="input"
                            placeholder="0.00"
                          />
                          <p className="text-xs text-gray-500 mt-1">
                            Max:{' '}
                            {formatCurrency(
                              selectedExpense.pending_amount || 0,
                              profile?.currency || 'INR'
                            )}
                          </p>
                        </div>
                        <div>
                          <label className="label">Payment Type *</label>
                          <select
                            required
                            value={newPayment.payment_type}
                            onChange={(e) =>
                              setNewPayment({
                                ...newPayment,
                                payment_type: e.target.value as PaymentType,
                              })
                            }
                            className="input"
                          >
                            <option value="advance">Advance</option>
                            <option value="milestone">Milestone</option>
                            <option value="regular">Regular</option>
                            <option value="final">Final</option>
                          </select>
                        </div>
                      </div>
                      <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                          <label className="label">Payment Date *</label>
                          <input
                            type="date"
                            required
                            value={newPayment.payment_date}
                            onChange={(e) =>
                              setNewPayment({ ...newPayment, payment_date: e.target.value })
                            }
                            className="input"
                          />
                        </div>
                        <div>
                          <label className="label">Notes</label>
                          <input
                            type="text"
                            value={newPayment.notes}
                            onChange={(e) =>
                              setNewPayment({ ...newPayment, notes: e.target.value })
                            }
                            className="input"
                            placeholder="Optional notes"
                          />
                        </div>
                      </div>
                      <button type="submit" className="btn-primary w-full">
                        <CreditCard className="w-5 h-5 mr-2" />
                        Record Payment
                      </button>
                    </form>
                  </div>
                )}

                {/* Payment History */}
                <div>
                  <h3 className="text-lg font-bold text-gray-900 mb-4">Payment History</h3>
                  {selectedExpense.payment_records && selectedExpense.payment_records.length > 0 ? (
                    <div className="space-y-3">
                      {selectedExpense.payment_records.map((record) => (
                        <div
                          key={record.id}
                          className="flex items-center justify-between p-4 bg-gray-50 rounded-lg"
                        >
                          <div className="flex items-center gap-4">
                            <div className="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                              <CheckCircle className="w-5 h-5 text-green-600" />
                            </div>
                            <div>
                              <p className="font-medium text-gray-900">
                                {formatCurrency(record.amount, profile?.currency || 'INR')}
                              </p>
                              <p className="text-sm text-gray-600">
                                {format(new Date(record.payment_date), 'MMM dd, yyyy')} â€¢{' '}
                                {record.payment_type}
                              </p>
                              {record.notes && (
                                <p className="text-sm text-gray-500 mt-1">{record.notes}</p>
                              )}
                            </div>
                          </div>
                        </div>
                      ))}
                    </div>
                  ) : (
                    <div className="text-center py-8 text-gray-500">
                      <CreditCard className="w-12 h-12 mx-auto mb-2 text-gray-300" />
                      <p>No payments recorded yet</p>
                    </div>
                  )}
                </div>
              </div>
            </div>
          </div>
        )}

        {/* Expenses List */}
        <div className="card">
          <div className="p-6 border-b border-gray-200">
            <h2 className="text-xl font-bold text-gray-900">
              {selectedMonth === 'all' && filterType === 'all' && 'All Expenses'}
              {selectedMonth !== 'all' && filterType === 'all' && `Expenses - ${selectedMonth}`}
              {filterType === 'team' && 'Team Member Payments'}
              {filterType === 'other' && 'Other Business Expenses'}
            </h2>
          </div>
          <div className="overflow-x-auto">
            {filteredExpenses.length === 0 ? (
              <div className="p-12 text-center">
                <TrendingDown className="w-16 h-16 text-gray-300 mx-auto mb-4" />
                <h3 className="text-lg font-medium text-gray-900 mb-2">No expenses yet</h3>
                <p className="text-gray-600 mb-6">
                  Start tracking your expenses and team payments.
                </p>
                <button onClick={() => setShowAddExpense(true)} className="btn-primary">
                  <Plus className="w-5 h-5 mr-2" />
                  Add First Expense
                </button>
              </div>
            ) : (
              <table className="w-full">
                <thead className="bg-gray-50 border-b border-gray-200">
                  <tr>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Date
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Type
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Description
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Amount
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Status
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Actions
                    </th>
                  </tr>
                </thead>
                <tbody className="bg-white divide-y divide-gray-200">
                  {filteredExpenses.map((expense) => (
                    <tr key={expense.id} className="hover:bg-gray-50">
                      <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {format(new Date(expense.created_at), 'MMM dd, yyyy')}
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap">
                        {expense.expense_type === 'team' ? (
                          <span className="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            <Users className="w-3 h-3 mr-1" />
                            Team
                          </span>
                        ) : (
                          <span className="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                            <DollarSign className="w-3 h-3 mr-1" />
                            Other
                          </span>
                        )}
                      </td>
                      <td className="px-6 py-4 text-sm text-gray-900">
                        {expense.expense_type === 'team' ? (
                          <div>
                            <p className="font-medium">{expense.project_name}</p>
                            <p className="text-gray-500 text-xs">
                              {expense.team_member?.full_name || expense.team_member?.email}
                            </p>
                          </div>
                        ) : (
                          expense.description
                        )}
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap text-sm">
                        {expense.expense_type === 'team' ? (
                          <div>
                            <p className="font-medium text-gray-900">
                              {formatCurrency(
                                expense.total_amount || 0,
                                profile?.currency || 'INR'
                              )}
                            </p>
                            <p className="text-xs text-green-600">
                              Paid:{' '}
                              {formatCurrency(expense.paid_amount || 0, profile?.currency || 'INR')}
                            </p>
                            {expense.pending_amount! > 0 && (
                              <p className="text-xs text-orange-600">
                                Pending:{' '}
                                {formatCurrency(
                                  expense.pending_amount!,
                                  profile?.currency || 'INR'
                                )}
                              </p>
                            )}
                          </div>
                        ) : (
                          <p className="font-medium text-red-600">
                            {formatCurrency(expense.amount, profile?.currency || 'INR')}
                          </p>
                        )}
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap">
                        {expense.expense_type === 'team' && (
                          <>
                            {expense.payment_status === 'completed' && (
                              <span className="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <CheckCircle className="w-3 h-3 mr-1" />
                                Completed
                              </span>
                            )}
                            {expense.payment_status === 'partial' && (
                              <span className="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                <Clock className="w-3 h-3 mr-1" />
                                Partial
                              </span>
                            )}
                            {expense.payment_status === 'pending' && (
                              <span className="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                <Calendar className="w-3 h-3 mr-1" />
                                Pending
                              </span>
                            )}
                          </>
                        )}
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap text-sm">
                        <div className="flex items-center gap-2">
                          {expense.expense_type === 'team' && (
                            <button
                              onClick={() => handleViewPayments(expense)}
                              className="text-blue-600 hover:text-blue-800"
                              title="View/Add payments"
                            >
                              <Eye className="w-4 h-4" />
                            </button>
                          )}
                          <button
                            onClick={() => handleDeleteExpense(expense.id)}
                            className="text-red-600 hover:text-red-800"
                            title="Delete expense"
                          >
                            <Trash2 className="w-4 h-4" />
                          </button>
                        </div>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            )}
          </div>
        </div>
      </div>
    </div>
  )
}
